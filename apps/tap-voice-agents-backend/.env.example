# =============================================================================
# OpenBotAuth Keys
# =============================================================================
# Generate keys at https://registry.openbotauth.org
# Then run from repo root: node scripts/parse-keys.js path/to/openbotauth-keys-username.txt
# Copy the generated OBA_* values here

OBA_PRIVATE_KEY_PEM="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
OBA_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
OBA_KID="penny-payments-001"
OBA_SIGNATURE_AGENT_URL="https://api.openbotauth.org/jwks/your-username.json"

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8090
FRONTEND_URL="http://localhost:5175"

# =============================================================================
# OpenBotAuth Verifier (origin-side verification)
# =============================================================================
OBA_VERIFIER_URL="https://verifier.openbotauth.org/verify"
# Can be self-hosted or use hosted service - merchant's choice

# =============================================================================
# Mock Visa Configuration
# =============================================================================
MOCK_VISA_MERCHANT_ID="DEMO_MERCHANT_001"
MOCK_VISA_ALWAYS_APPROVE=true

# =============================================================================
# Session & Security
# =============================================================================
SESSION_MAX_AGE_MS=480000          # 8 minutes
CONSENT_WINDOW_SECONDS=480         # 8 minutes max between consent and checkout
