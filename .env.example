# OpenBotAuth Demos Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Key Material (Ed25519)
# =============================================================================
# Generate keys using the OpenBotAuth registry portal or bot-cli
# DO NOT commit your actual .env file with real keys!

# Ed25519 private key in PEM format (PKCS8)
OBA_PRIVATE_KEY_PEM=""

# Ed25519 public key in PEM format (SPKI)
OBA_PUBLIC_KEY_PEM=""

# Key ID (stable identifier, typically UUID or hash)
OBA_KID="oba-demo-kid-001"

# Signature-Agent URL (points to your JWKS endpoint)
OBA_SIGNATURE_AGENT_URL="https://registry.openbotauth.org/jwks/your-username.json"

# =============================================================================
# Demo Configuration
# =============================================================================

# Target URL for demos (WordPress site with OpenBotAuth plugin)
DEMO_URL="https://blog.attach.dev/?p=6"

# Verifier service URL (for validation)
VERIFIER_URL="https://verifier.openbotauth.org/verify"

# =============================================================================
# Widget Configuration
# =============================================================================

# Widget backend port
WIDGET_PORT=8089

# Widget frontend port
WIDGET_FRONTEND_PORT=5174

# Default signing mode (true = signed by default, false = unsigned)
WIDGET_SIGNED_DEFAULT=false
